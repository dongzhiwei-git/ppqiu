.user_message{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
} 

.user_icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.user_text{
  height: 100%;
  display: flex;
  padding-left: auto 20rpx;
  /* align-items: center; */
  flex-direction: column;
  font-size: 30rpx;
  line-height: 1.5rem;
  letter-spacing: 7rpx;
}
.user_time{
  font-size: 25rpx;
  color: lightslategrey;
}

.contents{
  display: flex;
  flex-direction: column;
}

.contents_text .title{
  font-size: 40rpx;

}
.contents_text .contents{
  line-height: 1.5rem;
  letter-spacing: 7rpx;
  
}